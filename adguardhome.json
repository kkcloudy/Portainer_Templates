{
    "version": "2",
    "templates": [
        {
            "categories": [
                "Other"
            ],
            "description": "AdGuard Home is a network-wide software for blocking ads & tracking.",
            "image": "adguard/adguardhome",
            "logo": "https://raw.githubusercontent.com/SelfhostedPro/selfhosted_templates/master/Images/pihole.png",
            "name": "adguardhome",
            "note": "Browse to <a herf='http://{host-ip}:3000'>http://{host-ip}:3000</a> to access the web interface.",
            "platform": "linux",
             "env": [
                {
                    "default": "1000",
                    "label": "PUID",
                    "name": "PUID"
                },
                {
                    "default": "1000",
                    "label": "PGID",
                    "name": "PGID"
                },
                {
                    "default": "Europe/London",
                    "label": "Time Zone",
                    "name": "TZ"
                }
            ],
            "ports": [
                "53:53/tcp",
                "53:53/udp",
                "3000:3000/tcp",
                "80:80/tcp",
                "433:433/tcp",
                "433:433/upd"
            ],
            "restart_policy": "unless-stopped",
            "title": "Pi-Hole",
            "type": 1,
             "volumes": [
                {
                    "container": "/opt/adguardhome/work",
                    "bind": "/my/own/workdir"
                },
                {
                    "container": "/opt/adguardhome/conf",
                    "bind": "/my/own/confdir"
                }
            ]
        }
    ]
}
